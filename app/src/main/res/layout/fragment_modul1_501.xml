<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar6"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:title="Informasi kesehatan"
            app:titleTextColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:paddingBottom="16dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/toolbar6">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="1. Memiliki Atap Rumah yang terbuat dari genteng dan sejenisnya (disesuaikan dengan kearifan dan lingkungan lokal) " />

            <RadioGroup
                android:id="@+id/edt1_501"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa501"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak501"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="2. Memiliki dinding rumah yang terbuat dari tembok dan sejenisnya (disesuaikan dengan kearifan dan lingkungan lokal)" />

            <RadioGroup
                android:id="@+id/edt1_502"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa502"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak502"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="3. Memiliki fasilitas listrik memadai " />

            <RadioGroup
                android:id="@+id/edt1_503"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa503"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak503"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="4. Memiliki lantai permanen" />

            <RadioGroup
                android:id="@+id/edt1_504"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa504"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak504"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="5. Memiliki fasilitas air bersih (Air PAM/Air Tanda)" />

            <RadioGroup
                android:id="@+id/edt1_505"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa505"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak505"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="6. Memiliki fasilitas sanitasi (Toilet) yang memadai" />

            <RadioGroup
                android:id="@+id/edt1_506"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa506"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak506"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="7. Tidak Memiliki penyakit berat menahun (TBC, Stroke, Diabetes, Jantung, dll)" />

            <RadioGroup
                android:id="@+id/edt1_507"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa507"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak507"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="8. Tidak Memiliki cacat fisik akibat kecelakaan (Diamputasi, dsb)" />


            <RadioGroup
                android:id="@+id/edt1_508"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa508"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak508"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="9. Memiliki akses kesehatan (BPJS Kesehatan, Asuransi Kesehatan lain)" />


            <RadioGroup
                android:id="@+id/edt1_509"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa509"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak509"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="10. Tidak memiliki anggota keluarga yang merokok" />


            <RadioGroup
                android:id="@+id/edt1_510"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioYa510"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1. Ya" />

                <RadioButton
                    android:id="@+id/radioTidak510"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0. Tidak" />

            </RadioGroup>



            <Button
                android:id="@+id/btn_next1_501"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"

                android:background="@drawable/rounded_btn2"
                android:text="Next"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>