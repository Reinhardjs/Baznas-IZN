<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_label_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="Data"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/link_to_data"
            app:layout_constraintStart_toStartOf="@+id/link_to_data"
            app:layout_constraintTop_toBottomOf="@+id/link_to_data" />

        <View
            android:id="@+id/bg_dashboard"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@drawable/bgcolor"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>


        <android.support.v7.widget.CardView
            android:id="@+id/link_to_data"
            android:layout_width="145dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="@+id/txt_label_title"
            app:layout_constraintTop_toBottomOf="@+id/bg_dashboard">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_data_dashboard" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/link_to_survey"
            android:layout_width="145dp"
            android:layout_height="90dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/link_to_data"
            app:layout_constraintEnd_toEndOf="@+id/txt_label_title"
            app:layout_constraintTop_toTopOf="@+id/link_to_data">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_survey_dasyboard" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txt_label_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="Isi Survey"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/link_to_survey"
            app:layout_constraintStart_toStartOf="@+id/link_to_survey"
            app:layout_constraintTop_toBottomOf="@+id/link_to_survey" />

        <TextView
            android:id="@+id/txt_label_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_light"
            android:text="DASHBOARD BAZNAS"
            android:textColor="#eeeeee"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg_dashboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_label_title"
            app:layout_constraintStart_toStartOf="@+id/txt_label_title"
            app:srcCompat="@drawable/garuda" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>