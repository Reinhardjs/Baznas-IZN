<?xml version="1.0" encoding="utf-8"?>
<com.emmasuzuki.easyform.EasyForm
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/easyForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:showErrorOn="change">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="0dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Penghimpunan"
        app:titleMarginStart="20dp"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/Toolbar.TitleTextSmall"/>

    <TextView
        android:id="@+id/txt_501"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/poppins_light"
        android:text="1. Penghimpunan ZIS dua tahun sebelumnya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar6" />

    <TextView
        android:id="@+id/txt_502"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_light"
        android:text="2. Penghimpunan ZIS setahun sebelumnya"
        app:layout_constraintEnd_toEndOf="@+id/edt_501"
        app:layout_constraintStart_toStartOf="@+id/edt_501"
        app:layout_constraintTop_toBottomOf="@+id/edt_501" />

    <com.emmasuzuki.easyform.EasyTextInputLayout
        android:id="@+id/edt_501"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Dalam Angka"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_501"
        app:layout_constraintStart_toStartOf="@+id/txt_501"
        app:layout_constraintTop_toBottomOf="@+id/txt_501"
        app:errorMessage="@string/error_message_empty"
        app:errorType="empty"/>

    <com.emmasuzuki.easyform.EasyTextInputLayout
        android:id="@+id/edt_502"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Dalam Angka"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_502"
        app:layout_constraintStart_toStartOf="@+id/txt_502"
        app:layout_constraintTop_toBottomOf="@+id/txt_502"
        app:errorMessage="@string/error_message_empty"
        app:errorType="empty"/>


    <Button
        android:id="@+id/btn_next_501"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_btn2"
        android:text="@string/btn_save"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edt_502"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_502"
        app:layout_constraintTop_toBottomOf="@+id/edt_502" />

</android.support.constraint.ConstraintLayout>

</com.emmasuzuki.easyform.EasyForm>